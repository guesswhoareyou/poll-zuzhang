<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.AnswerVMMapper">
  <select id="selectAll" resultMap="AnswerVMResultMap">select * from poll_answer</select> 
  <!-- 定义结果集 -->
 <resultMap type="com.briup.apps.poll.bean.extend.AnswerVM" id="AnswerVMResultMap">  
           <id  column="id" property="id"/>
           <result column="selection" property="selection"/>
           <result column="checkes" property="checkes"/>
           <result column="content" property="content"/>
           <association column="survey_id" property="survey"
            select="com.briup.apps.poll.dao.SurveyMapper.selectByPrimaryKey">  
            </association>
 </resultMap>
</mapper>